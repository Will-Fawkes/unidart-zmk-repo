#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

&lt { quick_tap_ms = <100>; };

&mt { tapping-term-ms = <400>; };

#define DEFAULT 0
#define RAISE 1


/ {
        keymap {
                compatible = "zmk,keymap";
//                 default_layer {
//                         bindings = <
//     &kp Q       &kp W        &kp E          &kp R        &kp T          &kp Y      &kp U         &kp I           &kp O       &kp P
//     &kp A       &kp S        &kp D          &kp F        &kp G          &kp H      &kp J         &kp K           &kp L       &kp SEMI
//     &kp Z       &kp X        &kp C          &kp V        &kp B          &kp N      &kp M         &kp COMMA       &kp DOT     &kp FSLH
//                                             &kp BKSP     &lt 1 LCTRL      &lt 1 RET  &kp SPACE
//                         >;
//                 };
                default_layer {
                        bindings = <
    &kp Q       &kp W        &kp E          &kp R        &kp T          &kp Y      &kp U         &kp I           &kp O       &kp P
    &kp A       &kp S        &kp D          &kp F        &kp G          &kp H      &kp J         &kp K           &kp L       &kp SEMI
    &mt LSHIFT Z       &kp X        &kp C          &kp V        &kp B          &kp N      &kp M         &kp COMMA       &kp DOT     &mt LSHIFT	FSLH
                                            &kp BKSP     &kp LCTRL      &lt RAISE RET  &kp SPACE
                        >;
                };

                RAISE {
                        bindings = <
    &kp ESC     &kp N7      &kp N8       &kp N9      &kp BSLH          &kp PRSCRN  &kp SLCK    &kp HOME   &kp END     &kp EQUAL
    &kp CAPS    &kp N4      &kp N5       &kp N6      &kp LBKT           &kp INS   &kp PG_UP    &kp UP  &kp PG_DN    &kp SQT
    &kp LSHIFT      &kp N1      &kp N2       &kp N3      &kp RBKT           &kp DEL  &kp LEFT    &kp DOWN  &kp RIGHT   &kp SLASH
                                         &kp N0   &kp BKSP           &kp RET     &kp SPACE
                        >;
                };
        };    
};

/**

Base Layer
 Q | W | E | R | T      Y | U | I | O | P
 A | S | D | F | G      H | J | K | L | ;
 Z | X | C | V | B      N | M | , | . | /
  BKSP | &lt 1 TAB      &lt 1 RET | SPACE

Layer 1
 DEL | 7 | 8 | 9 | %     ~ | ! | ' | " | @
   + | 4 | 5 | 6 | *     l | d | u | r | =
   0 | 1 | 2 | 3 | #     ` | & | | | _ | \
               ^ | $     > | -

*/
